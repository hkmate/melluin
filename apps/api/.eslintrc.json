{
    "root": true,
    "extends": [
        "../../.eslintrc.json"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": [
            "./tsconfig.json"
        ],
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": ["*.controller.ts"],
            "rules": {
                "max-params-no-constructor/max-params-no-constructor": ["warn", 6]
            }
        }
    ],
    "env": {
        "node": true,
        "jest": true
    }
}
